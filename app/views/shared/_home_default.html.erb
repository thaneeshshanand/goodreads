<div class="container-fluid mast-head">
  <div class="signup-form">
    <%= form_for @user, url: users_path, class: "form-horizontal" do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: error_message(@user, :name) %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: error_message(@user, :email) %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: error_message(@user, :password) %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control',
            placeholder: error_message(@user, :password_confirmation) %>
      </div>
      <div class="from-group">
        <%= f.submit "Sign up" , class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>